{
	"name": "@haltcase/run",
	"version": "2.0.1",
	"description": "Flexible, function-based task runner where command line options are props",
	"keywords": [
		"task",
		"runner",
		"command",
		"function",
		"typescript",
		"execa",
		"arktype"
	],
	"homepage": "https://github.com/haltcase/run#readme",
	"bugs": "https://github.com/haltcase/run/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/haltcase/run.git"
	},
	"license": "MIT",
	"author": "Bo Lingen <bo@haltcase.dev> (https://haltcase.dev)",
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"hr": "./dist/cli/bin.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"eslint:check": "eslint src",
		"format": "eslint --fix src && prettier src --write",
		"hr": "tsx ./src/cli/bin.ts",
		"prepack": "pnpm run build",
		"prepare": "husky",
		"prettier:check": "prettier --check src",
		"test": "vitest",
		"typescript:check": "tsc --noEmit && echo \"No errors reported by tsc.\""
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,css,yml,yaml}": "pnpm prettier --write"
	},
	"prettier": "@haltcase/style/prettier",
	"dependencies": {
		"@favware/colorette-spinner": "^1.0.1",
		"@isaacs/cliui": "^8.0.2",
		"arktype": "^2.1.17",
		"c12": "^2.0.1",
		"colorette": "^2.0.20",
		"execa": "^9.5.1"
	},
	"devDependencies": {
		"@haltcase/style": "^7.3.1",
		"@types/node": "^22.8.6",
		"eslint": "^9.24.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	},
	"packageManager": "pnpm@10.8.0",
	"engines": {
		"node": ">=20"
	},
	"publishConfig": {
		"access": "public"
	},
	"haltcase.run": {
		"taskDirectory": "./scripts",
		"quiet": true
	}
}
